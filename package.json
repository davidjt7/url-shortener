{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "Backend for URL Shortener",
  "main": "server.js",
  "author": "David Joseph Thomas",
  "private": "true",
  "engines": {
    "node": ">=14.5.0"
  },
  "scripts": {
    "start": "DOTENV_CONFIG_PATH=.env node -r dotenv/config ./build/server.js",
    "start:debug": "DEBUG=express:* DOTENV_CONFIG_PATH=.env node -r dotenv/config ./build/server.js",
    "start:inspect": "DOTENV_CONFIG_PATH=.env node -r dotenv/config --inspect ./build/server.js",
    "dev": "DOTENV_CONFIG_PATH=.env ts-node -r dotenv/config ./src/server.ts",
    "dev:watch": "nodemon --config nodemon.json",
    "clean": "rimraf ./build",
    "build": "npm run lint && npm run clean && tsc",
    "build:watch": "tsc -w",
    "lint": "tslint --project .",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "prettier": "lint-staged",
    "precommit": "npm run prettier && npm run lint",
    "prepush": "npm run build"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser typescript --write",
      "git add"
    ],
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/express": "^4.17.3",
    "@types/shortid": "^0.0.29",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "jest": "^26.4.2",
    "path": "^0.12.7",
    "pg": "^8.3.3",
    "sequelize": "^5.7.1",
    "shortid": "^2.2.15",
    "ts-jest": "^26.3.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/jest": "^24.0.25",
    "@types/supertest": "^2.0.10",
    "faker": "^4.1.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "sequelize-cli": "^6.2.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.4"
  }
}
